@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 text-primary">@ViewBag.WelcomeMessage</h1>
    <p class="lead">Current Date and Time: <strong>@ViewBag.CurrentTime</strong></p>
    
    <div class="row mt-5">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Navigation Menu</h5>
                    <p class="card-text">Use the navigation menu above to explore different sections of our application:</p>
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("About", "Home")" class="list-group-item list-group-item-action">
                            <i class="fas fa-info-circle"></i> Learn About Our Application
                        </a>
                        <a href="@Url.Action("Services", "Home")" class="list-group-item list-group-item-action">
                            <i class="fas fa-cogs"></i> View Our Services
                        </a>
                        <a href="@Url.Action("Contact", "Home")" class="list-group-item list-group-item-action">
                            <i class="fas fa-envelope"></i> Get in Touch
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
